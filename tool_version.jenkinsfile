pipeline {
 
  agent { label "${LABEL}" }
  
  options { skipDefaultCheckout(true) }
  
  stages {

    stage('clean workspace') {
      steps {
        cleanWs()
      }
    }

    stage('Version') {
      steps {
        sh "${TOOL} --version"
      }
    }

    stage('Hello') {
      steps {
        sh 'python3 hello_world.py'
      }
    }


  }

  post { always { cleanWs() } }

}